# Use Java 17 JDK base image
FROM eclipse-temurin:17-jdk

# Set working directory
WORKDIR /app

# Copy Maven wrapper & pom.xml
COPY mvnw .
COPY mvnw.cmd .
COPY .mvn/ .mvn/
COPY pom.xml .

# Give executable permission to mvnw
RUN chmod +x mvnw

# Download dependencies + build jar (safer than go-offline)
RUN ./mvnw -B -e -DskipTests clean package

# Copy source code
COPY src/ src/

# Rebuild application after copying sources
RUN ./mvnw -B -e -DskipTests clean package

# Expose port (Render uses dynamic PORT anyway)
EXPOSE 8080

# Start application â€” ensure jar name is correct
CMD ["java", "-jar", "target/backend-0.0.1-SNAPSHOT.jar"]
