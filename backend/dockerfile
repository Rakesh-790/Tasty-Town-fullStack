# Use Java 17 JDK base image
FROM eclipse-temurin:17-jdk

# Set working directory
WORKDIR /app

# Copy Maven wrapper & pom.xml
COPY mvnw .
COPY mvnw.cmd .
COPY .mvn/ .mvn/
COPY pom.xml .

# Give executable permission to mvnw (IMPORTANT)
RUN chmod +x mvnw

# Download dependencies and go offline
RUN ./mvnw dependency:go-offline -B

# Copy source code
COPY src/ src/

# Package application
RUN ./mvnw package -DskipTests

# Expose port (Render will assign PORT dynamically)
EXPOSE 8080

# Start application â€” make sure jar name is correct
CMD ["java", "-jar", "target/backend-0.0.1-SNAPSHOT.jar"]
